{
	"easycom": {
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [{
			"path": "pages/login/login",
			"style": {
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/index/index",
			"style": {
				"enablePullDownRefresh": true
			}
		}, {
			"path": "pages/user/user",
			"style": {
				"enablePullDownRefresh": false
			}
		}, {
			"path": "pages/message/message",
			"style": {
				"enablePullDownRefresh": true
			}
		}, {
			"path": "pages/index_details/index_details",
			"style": {
				"navigationBarTitleText": "详情",
				"enablePullDownRefresh": true
			}

		}, {
			"path": "pages/index_contrast/index_contrast",
			"style": {
				"navigationBarTitleText": "对比",
				"enablePullDownRefresh": false,
				"disableScroll": true

			}

		}, {
			"path": "pages/index_monitoring/index_monitoring",
			"style": {
				"navigationBarTitleText": "监控",
				"enablePullDownRefresh": false,
				"disableScroll": true
			}
		}, {
			"path": "pages/index_statistics/index_statistics",
			"style": {
				"navigationBarTitleText": "统计",
				"enablePullDownRefresh": true
			}
		}, {
			"path": "pages/user_changePass/user_changePass",
			"style": {
				"navigationBarTitleText": "密码修改",
				"enablePullDownRefresh": false
			}

		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#3864f7",
		"backgroundColor": "#eef3f7",
		"app-plus": {
			"background": "#eef3f7"
		}
	},
	"tabBar": {
		"color": "#959595",
		"selectedColor": "#3864f7",
		"backgroundColor": "#fff",
		"borderStyle": "black",
		"list": [{
				"text": "主页",
				"pagePath": "pages/index/index",
				"iconPath": "static/images/home.png",
				"selectedIconPath": "static/images/home-active.png"
			},
			{
				"text": "消息",
				"pagePath": "pages/message/message",
				"iconPath": "static/images/message.png",
				"selectedIconPath": "static/images/message-active.png"
			},
			{
				"text": "我的",
				"pagePath": "pages/user/user",
				"iconPath": "static/images/user.png",
				"selectedIconPath": "static/images/user-active.png"
			}
		]
	}
}
